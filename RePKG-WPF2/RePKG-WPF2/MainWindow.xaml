<Window
    x:Class="RePKG_WPF2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:RePKG_WPF2.ViewModel"
    Title="PKG Converter"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Grid>
                <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="40"
                        Margin="4"
                        Command="{Binding AddCommand}"
                        Content="添加PKG" />
                    <Button
                        Width="120"
                        Height="40"
                        Margin="4"
                        Command="{Binding SetExportPathCommand}"
                        Content="选择导出目录" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="40"
                        Margin="4"
                        Command="{Binding StartExportCommand}"
                        Content="开始导出" />
                </WrapPanel>
            </Grid>
        </Border>

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="True"
            ItemsSource="{Binding WorkItems}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Id">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Id}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Input">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" ToolTip="Del键删除" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Output">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ExportPath}" ToolTip="Del键删除" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2">
            <ProgressBar
                Margin="4"
                Maximum="100"
                Minimum="0"
                Height="40"
                Background="Transparent"
                Foreground="{DynamicResource PrimaryHueMidBrush}"
                Value="{Binding Progress}"
                Style="{StaticResource Jg.ProgressBar}" />
        </Border>
    </Grid>
</Window>
